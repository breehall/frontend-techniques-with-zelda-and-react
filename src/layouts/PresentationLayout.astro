---
interface Props {
  title: string;
  previousPageUrl: string | null;
  previousPageTitle: string | null;
  nextPageUrl: string | null;
  nextPageTitle: string | null;
}

const {
  title,
  previousPageUrl,
  previousPageTitle,
  nextPageUrl,
  nextPageTitle,
} = Astro.props;

import { NavButton } from '../components/NavButton.tsx';
---

<section id='presentation'>
  <div class='w-full flex justify-between items-center px-8 mb-3'>
    <div class='flex-1'>
      {previousPageUrl && previousPageTitle && (
        <NavButton
          path={previousPageUrl}
          title={previousPageTitle}
          isNextPage={false}
        />
      )}
    </div>
    <h2 class='text-2xl font-bold text-center flex-1'>{title}</h2>
    <div class='flex-1 text-right'>
      {nextPageUrl && nextPageTitle && (
        <NavButton path={nextPageUrl} title={nextPageTitle} isNextPage={true} />
      )}
    </div>
  </div>

  <div class='container mx-auto flex flex-col lg:flex-row'>
    <div
      id='app-display'
      class='flex-shrink-0 lg:w-1/3 lg:max-w-[750px] p-4 m-2 lg:order-first order-last'
    >
      <slot name='app' />
    </div>
    <div
      id='slides-display'
      class='flex-1 p-4 lg:w-2/3 bg-stone-100 rounded-lg shadow-md'
    >
      <slot name='slides' />
    </div>
  </div>
</section>

<style>
  #app-display,
  #slides-display {
    @apply m-2;
  }

  #app-display {
    /* background-color: red; */
  }

  #slides-display {
  }
</style>
