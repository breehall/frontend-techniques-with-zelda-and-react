---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/triforce.png' />
    <link href='https://cdn.lineicons.com/4.0/lineicons.css' rel='stylesheet' />
    <link
      href='https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap'
      rel='stylesheet'
    />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class='wrapper'>
      <header>
        <img
          src='/triforce.png'
          class='header__icon inline'
          alt='The Legend of Zelda triforce'
        />
        <h1>Frontend Techniques in the Realm of Hyrule with React</h1>
      </header>
      <main><slot /></main>
      <footer>
        <div class='footer__socials'>
          <a
            href='https://www.instagram.com/bytesofbree/'
            target='_blank'
            rel='noopener noreferrer'><i class='lni lni-instagram'></i></a
          >
          <a
            href='https://www.tiktok.com/@bytesofbree'
            target='_blank'
            rel='noopener noreferrer'><i class='lni lni-tiktok-alt'></i></a
          >
          <a
            href='https://www.linkedin.com/in/briannahall0/'
            target='_blank'
            rel='noopener noreferrer'><i class='lni lni-linkedin'></i></a
          >
          <a
            href='https://github.com/breehall/frontend-techniques-with-zelda-and-react'
            target='_blank'
            rel='noopener noreferrer'><i class='lni lni-github-original'></i></a
          >
        </div>
        <div>Made with ðŸ’œ by <strong>Bree Hall</strong></div>
        <div>THAT Conference | Wisconsin</div>
      </footer>
    </div>
  </body>
</html>
<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
  }
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  .wrapper {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  header,
  footer {
    @apply bg-hyrule-green;
    color: #fff;
    text-align: center;
    height: 60px;
    padding: 0.5rem 3rem;
    display: flex;
    align-items: center;
  }

  header {
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    justify-content: center;
  }

  .header__icon {
    width: 25px;
    height: 25px;
    margin-right: 10px;
  }

  header > h1 {
    display: inline;
    font-weight: bold;
  }

  footer {
    justify-content: space-around;
  }

  .footer__socials {
    display: flex;
    align-items: center;
    gap: 2rem;
    font-size: 1.5rem;
  }
  .footer__socials a:hover,
  .footer__socials a:focus {
	scale: 1.2;
	transition: all 0.3s;
  }

  main {
    flex: 1;
    overflow-y: auto;
    padding: 20px; 
  }
</style>
